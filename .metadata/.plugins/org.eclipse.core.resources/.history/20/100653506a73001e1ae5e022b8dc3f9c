package aprasentacao;


import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

//import java.awt.Color;
//import java.awt.Font;

public class Janela extends JFrame implements ActionListener {

	private Header header;
	private PainelPrincipal painelPrincipal;
	private PainelSecundario painelSecundario;
	private JDesktopPane painelTeste;
	
	
	public Janela() {

		instancias();

		this.setTitle("Sistema de Venda de Cachorro-Quente");
		this.setSize(800, 800);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setResizable(false);
		this.setLayout(null);
		
		painelTeste.setBackground(Color.LIGHT_GRAY);
		
		setContentPane(painelTeste); 
		
		
		adicionarPaineis();
		setVisible(true);
	}

	private void adicionarPaineis() {
		add(header);
		add(painelPrincipal);
		add(painelSecundario);
	}

	private void instancias() {

		painelTeste = new JDesktopPane();
		header = new Header();
		painelPrincipal = new PainelPrincipal();
		painelSecundario = new PainelSecundario();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == header.realizarVenda) {
			System.out.println("Oi!");
		}else if(e.getSource() == listarVendas) {
			
		}else if(e.getSource() == listarPedidos) {
			
		}else if(e.getSource() == mostrarRelatorio) {
			
		}		
	}

}
