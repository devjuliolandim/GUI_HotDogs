package aprasentacao;

import javax.swing.*;

import java.awt.Color;
import java.awt.Font;


public class Janela extends JFrame{

	public Janela() {
		
	ImageIcon image = new ImageIcon("ae54a63c983f8eca421edb21babd3246.jpg");	
		
		
	JLabel label = new JLabel();
	label.setText("Hello, how are ya?");
	label.setIcon(image);	
	label.setHorizontalTextPosition(JLabel.CENTER);	
	label.setVerticalTextPosition(JLabel.CENTER);
	label.setForeground(Color.BLACK);
	label.setFont(new Font("MV Boli", Font.BOLD, 20));
	
	
	this.setTitle("Janelinha!");
	this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	this.setSize(1080,1920);
	//this.setResizable(false);
	this.getContentPane().setBackground(new Color(250,100,100));
	
	add(label);
	
	
	setVisible(true);
	}
	
	
	
	
}
